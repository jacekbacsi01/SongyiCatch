<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_margin="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Hely neve -->
    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hely neve"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#222222" />

    <!-- Leírás vagy kategória -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Típus / kategória"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

    <!-- Cím -->
    <TextView
        android:id="@+id/addressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cím vagy környék"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginTop="2dp" />

    <!-- További tag-ek (pl. szolgáltatás, nyitva tartás) -->
    <TextView
        android:id="@+id/extraInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Egyéb információ: nyitva tartás, szolgáltatás, stb."
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginTop="2dp" />

</LinearLayout>