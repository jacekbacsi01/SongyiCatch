<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <!-- Itt egy FrameLayout a MapView köré -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="SongyiCatch"
            app:titleTextColor="@android:color/black" />

        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/sondeInfoPanel"
                android:layout_width="416dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="12dp"
                android:background="@drawable/info_panel_bg"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🟠 RS41 - Offline"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textSerial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🆔 Serial: -"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#️⃣ Frame: #-"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textFreq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📡 Freq: - Mhz"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌡 Hőmérséklet: - °C"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textAltitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏔️ Magasság: - m"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚀 Sebesség: - km/h"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textCoordinates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📍 Lat: -, Lon: -"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textSats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛰️ Műholdak: -"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textAscent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⬆️ Emelkedés: - m/s"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textDescent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⬇️ Süllyedés: - m/s"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textBurst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💥 Eldurranás: - m"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textSelfAlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📈 Saját Alt: - m"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📏 Távolság: - m"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏰ Idő: 1980.01.01. 00:00:00"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </org.osmdroid.views.MapView>

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>